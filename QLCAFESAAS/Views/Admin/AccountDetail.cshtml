@model QLCAFESAAS.Models.UserModel

@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-action="EditAccount" asp-controller="Admin" method="post">
    <div class="d-flex justify-content-between">
        <div class="header-form">
            <a asp-action="Index" asp-controller="Admin">Tài khoản</a> / Chỉnh sửa
        </div>
    </div>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-light d-flex justify-content-between">
                <div>
                    <h5 class="mb-0">Chỉnh sửa tài khoản</h5>
                </div>
                <div class="btn-action-form">
                    <button class="btn btn-outline-secondary" asp-action="Index" asp-controller="Admin">Hủy</button>
                    <button class="btn btn-submit" type="submit">Lưu</button>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="UserName" class="form-label">Tên tài khoản <span class="text-danger">*</span></label>
                        <input asp-for="UserName" name="UserName" class="form-control" placeholder="Nhập tên tài khoản" readonly />
                    </div>
                    <div class="col-md-6">
                        <label for="Email" class="form-label">Email</label>
                        <input asp-for="Email" name="Email" type="email" class="form-control" placeholder="Nhập email" />
                    </div>
                </div>
                <div class="row mb-3">

                    <div class="col-md-6">
                        <label for="PermissionID" class="form-label">Quyền hạn</label>
                        <select asp-for="PermissionID" name="PermissionID" class="form-select">
                            <option value="1">Admin</option>
                            <option value="2">Manager</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Status" class="form-label">Trạng thái</label>
                    <div class="form-check">
                        <input asp-for="Status" class="form-check-input" type="checkbox" name="Status">
                        <label class="form-check-label" for="Status">Kích hoạt</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

