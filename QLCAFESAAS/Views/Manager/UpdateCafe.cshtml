@model QLCAFESAAS.Models.CafeModel

<link rel="stylesheet" href="~/css/NewProduct.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Manager Page";
    Layout = "~/Views/Shared/_LayoutCN.cshtml";
}
<div class="form-container">
    <h2 class="form-title">Cập nhật cửa hàng</h2>

    <form asp-action="UpdateCafe" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CafeID" />

        <div class="form-group">
            <label for="CafeName">Tên cửa hàng</label>
            <input type="text" asp-for="CafeName" class="form-control" />
            <span asp-validation-for="CafeName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Address">Địa chỉ</label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Phone">Số điện thoại</label>
            <input type="text" asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>


        <button type="submit" class="buttonAdd">Cập nhật</button>
    </form>
</div>

